{
  "$schema": "../gen/schemas/capabilities.json",
  "identifier": "default",
  "description": "Default permissions for WebSQL",
  "platforms": ["linux", "macOS", "windows"],
  "permissions": [
    "core:default",
    "updater:default",
    "process:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:allow-read-dir",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-create",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-rename",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-copy-file",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-watch",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-unwatch",
      "allow": [{ "path": "**" }]
    }
  ]
}
